<!-- chunky template for current download -->
<h1>Gestion des quotas :</h1>
	<p>Ce module permet de g&eacute;rer les quotas des utilisateurs ...</p>
	<form method="post" action="<TMPL_VAR NAME='FORM_ACTION'>">
	<h2>Ajouter un quota :</h2>
	<p><label for="rtype">R&egrave;gles : </label>
		<select name="quota_rule_id" id="rtype" class="Field">
			<TMPL_LOOP NAME="RULES_LOOP">
				<option <TMPL_VAR NAME="RULE_SELECTED"> value="<TMPL_VAR NAME='RULE_ID'>"><TMPL_VAR NAME="RULE_NAME"></option>
			</TMPL_LOOP>
		</select><br>
	<label for="idqname">Nom : </label><input class="Field" id="idqname" type="text" name="quota_name" size="30" maxlength="50" value="<TMPL_VAR NAME='FORM_QUOTA_NAME'>">
	<label for="idqorder">Ordre : </label><input class="Field" id="idqorder" type="text" name="quota_qorder" size="10" maxlength="10" VALUE="<TMPL_VAR NAME='FORM_QUOTA_QORDER'>"><br>
	<label for="idqmfs">Taille de fichier max. : </label><input class="Field" id="idqmfs" type="text" name="quota_max_file_size" size="10" maxlength="10" value="<TMPL_VAR NAME='FORM_QUOTA_MAX_FILE_SIZE'>">
	<select name="quota_max_file_size_unit" class="Field">
		<TMPL_LOOP NAME="MFSUNIT_LOOP">
			<option <TMPL_VAR NAME="MFSUNIT_SELECTED"> value="<TMPL_VAR NAME='MFSUNIT_ID'>"><TMPL_VAR NAME="MFSUNIT_NAME"></option>
		</TMPL_LOOP>
	</select><br>
	<label for="idqmus">Place utilis&eacute;e max. : </label><input class="Field" id="idqmus" type="text" name="quota_max_used_space" size="10" maxlength="10" value="<TMPL_VAR NAME='FORM_QUOTA_MAX_USED_SPACE'>">
	<select name="quota_max_used_space_unit" class="Field">
		<TMPL_LOOP NAME="MUSUNIT_LOOP">
			<option <TMPL_VAR NAME="MUSUNIT_SELECTED"> value="<TMPL_VAR NAME='MUSUNIT_ID'>"><TMPL_VAR NAME="MUSUNIT_NAME"></option>
		</TMPL_LOOP>
	</select><br>
	<input class="Submit" type="submit" value="Envoyer"></p>
	<input type="hidden" name="quota_id" value="<TMPL_VAR NAME='FORM_QUOTA_ID'>">
	<input type="hidden" name="<TMPL_VAR NAME='MACTION'>" value="<TMPL_VAR NAME='MACTIONID'>">
	<input type="hidden" name="<TMPL_VAR NAME='SUBACTION'>" value="<TMPL_VAR NAME='SUBACTIONID'>">
	</form>
	<TMPL_IF NAME="HAS_ERROR"><p class="error"><TMPL_VAR NAME="ERROR"></p></TMPL_IF>
<TMPL_IF NAME="HAS_QUOTA">
	<table class="infos" border="0" cellpadding="0" cellspacing="0" width="100%">
		<thead>
			<tr><td>Date</td><td>Ordre</td><td>Nom</td><td>R&egrave;gle</td><td>MFS</td><td>TUS</td><td>Etat</td><td>Actions</td></tr>
		</thead>
		<tbody>
			<TMPL_LOOP NAME="QUOTA_LOOP">
			<tr>
				<td><TMPL_VAR NAME="QUOTA_DATE"></td>
				<td><TMPL_VAR NAME="QUOTA_ORDER"></td>
				<td><TMPL_VAR NAME="QUOTA_NAME"></td>
				<td><TMPL_VAR NAME="QUOTA_RULE"></td>
				<td><TMPL_VAR NAME="QUOTA_MAX_FILE_SIZE"></td>
				<td><TMPL_VAR NAME="QUOTA_MAX_USED_SPACE"></td>
				<td><TMPL_VAR NAME="QUOTA_STATE"></td>
				<td><a href="<TMPL_VAR NAME='REMOVEURL'>" title="Supprimer">D</a>&nbsp;<a href="<TMPL_VAR NAME='STATEURL'>" title="[A|De]activer">S</a>&nbsp;<a href="<TMPL_VAR NAME='MODIFYURL'>" title="Modifier">M</a></td>
			</tr>
			</TMPL_LOOP>
		</tbody>
	</table>
<TMPL_ELSE>
<p>Pas de r&egrave;gles</p>
</TMPL_IF>
