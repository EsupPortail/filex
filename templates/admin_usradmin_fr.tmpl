<!-- chunky template for current download -->
<h1>Gestion des administrateurs :</h1>
	<form method="post" action="<TMPL_VAR NAME='FORM_ACTION'>">
	<p>Ajouter un utilisateur <input id="Field" type="text" name="adduser" size="30"><input id="Submit" type="submit" value="Envoyer"></p>
	<input type="hidden" name="<TMPL_VAR NAME='MACTION'>" value="<TMPL_VAR NAME='MACTIONID'>">
	<input type="hidden" name="<TMPL_VAR NAME='SUBACTION'>" value="<TMPL_VAR NAME='SUBACTIONID'>">
	</form>
	<TMPL_IF NAME="HAS_ERROR"><p class="error"><TMPL_VAR NAME="ERROR"></p></TMPL_IF>
<TMPL_IF NAME="HAS_ADMINS">
	<table class="infos" border="0" cellpadding="0" cellspacing="0" width="100%">
		<thead>
			<tr><td>Identifiant</td><td>Informations</td><td>Email</td><td>Etat</td><td>Actions</td></tr>
		</thead>
		<tbody>
			<TMPL_LOOP NAME="ADMINS_LOOP">
			<tr>
				<td><TMPL_VAR NAME="ADMINUID"></td>
				<td><TMPL_VAR NAME="ADMININFOS"></td>
				<td><a href="mailto:<TMPL_VAR NAME='ADMINMAIL'>"><TMPL_VAR NAME="ADMINMAIL"></a></td>
				<td><TMPL_VAR NAME="ADMINSTATE"></td>
				<td><a href="<TMPL_VAR NAME='REMOVEURL'>" title="Supprimer">D</a>&nbsp;<a href="<TMPL_VAR NAME='STATEURL'>" title="[A|De]activer">S</a></td>
			</tr>
			</TMPL_LOOP>
		</tbody>
	</table>
<TMPL_ELSE>
<p>Pas d'administrateurs !</p>
</TMPL_IF>
