<!-- chunky template for current download -->
<h1>Gestion des exclusions :</h1>
	<p>
		Ce module permet de g&eacute;rer les acc&egrave;s des utilisateurs au syst&egrave;me. Une exclusion est bas&eacute;e sur une r&egrave;gle pr&eacute;c&eacute;demment d&eacute;finie via le module "Gestion des r&egrave;gles"
	</p>
	<form method="post" action="<TMPL_VAR NAME='FORM_ACTION'>">
	<h2>Ajouter une exclusion :</h2>
	<p><label for="rtype">R&egrave;gles : </label>
		<select name="exclude_rule_id" id="rtype" class="Field">
			<TMPL_LOOP NAME="RULES_LOOP">
				<option <TMPL_VAR NAME="RULE_SELECTED"> value="<TMPL_VAR NAME='RULE_ID'>"><TMPL_VAR NAME="RULE_NAME"></option>
			</TMPL_LOOP>
		</select><br>
	<label for="idrulename">Nom : </label><input class="Field" id="idrulename" type="text" name="exclude_name" size="30" maxlength="50" value="<TMPL_VAR NAME='FORM_EXCLUDE_NAME'>"><br>
	<label for="idrorder">Ordre : </label><input class="Field" id="idrorder" type="text" name="exclude_rorder" size="10" maxlength="10" VALUE="<TMPL_VAR NAME='FORM_EXCLUDE_RORDER'>">
	<input class="Submit" type="submit" value="Envoyer"></p>
	<input type="hidden" name="exclude_id" value="<TMPL_VAR NAME='FORM_EXCLUDE_ID'>">
	<input type="hidden" name="<TMPL_VAR NAME='MACTION'>" value="<TMPL_VAR NAME='MACTIONID'>">
	<input type="hidden" name="<TMPL_VAR NAME='SUBACTION'>" value="<TMPL_VAR NAME='SUBACTIONID'>">
	</form>
	<TMPL_IF NAME="HAS_ERROR"><p class="error"><TMPL_VAR NAME="ERROR"></p></TMPL_IF>
<TMPL_IF NAME="HAS_EXCLUDE">
	<table class="infos" border="0" cellpadding="0" cellspacing="0" width="100%">
		<thead>
			<tr><td>Date</td><td>Ordre</td><td>Nom</td><td>R&egrave;gle</td><td>Etat</td><td>Actions</td></tr>
		</thead>
		<tbody>
			<TMPL_LOOP NAME="EXCLUDE_LOOP">
			<tr>
				<td><TMPL_VAR NAME="EXCLUDE_DATE"></td>
				<td><TMPL_VAR NAME="EXCLUDE_ORDER"></td>
				<td><TMPL_VAR NAME="EXCLUDE_NAME"></td>
				<td><TMPL_VAR NAME="EXCLUDE_RULE"></td>
				<td><TMPL_VAR NAME="EXCLUDE_STATE"></td>
				<td><a href="<TMPL_VAR NAME='REMOVEURL'>" title="Supprimer">D</a>&nbsp;<a href="<TMPL_VAR NAME='STATEURL'>" title="[A|De]activer">S</a>&nbsp;<a href="<TMPL_VAR NAME='MODIFYURL'>" title="Modifier">M</a></td>
			</tr>
			</TMPL_LOOP>
		</tbody>
	</table>
<TMPL_ELSE>
<p>Pas de r&egrave;gles</p>
</TMPL_IF>
